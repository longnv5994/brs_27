<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %></br>
        <%= @user.name %>
      </h1>
    </section>
    <div class="col-md-8">
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </div>
    <div>
      <%= render "follow_form" if logged_in? %>
    </div>
  </aside>
  <h1><%= t "book.favorite" %></h1>
  <%= render partial: "books/book_index", locals: {books: @books} %>
</div>
