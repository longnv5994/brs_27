<span class="like_button">
  <% @like = current_user.likes.find_by(activity_id: activity.id )%>
  <%= form_for :like, url: user_like_path(user_id: current_user, id: @like.id),
    html: {method: :delete, remote: true} do |f| %>
    <%= f.hidden_field :activity_id, value: activity.id %>
    <%= f.submit t("users.unlike"), class: "btn", color: "#808080" %>
  <% end %>
</span>
